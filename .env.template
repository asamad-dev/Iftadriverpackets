# Driver Packet Processor Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Google Gemini API Key (REQUIRED for data extraction)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# HERE API Key (OPTIONAL but recommended for enhanced geocoding)
# Get your key from: https://developer.here.com/
HERE_API_KEY=your_here_api_key_here

# =============================================================================
# API CONFIGURATION (Optional - has sensible defaults)
# =============================================================================

# Gemini Model to use (default: gemini-1.5-flash)
GEMINI_MODEL=gemini-1.5-flash

# API Timeouts (seconds)
GEMINI_TIMEOUT=60
GEOCODING_TIMEOUT=5
ROUTING_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1.0

# Rate Limiting (seconds between requests)
NOMINATIM_RATE_LIMIT=1.0
HERE_RATE_LIMIT=0.1

# =============================================================================
# PROCESSING CONFIGURATION (Optional)
# =============================================================================

# Route Analysis Settings
MIN_STATE_MILES_THRESHOLD=1.0
ROUTE_SAMPLE_POINTS_MAX=20

# Validation Thresholds
MIN_TOTAL_MILES=50
MAX_TOTAL_MILES=15000
MAX_TRIP_NUMBER=100

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Directory (relative to project root)
LOG_DIR=temp

# Stream Redirection (true/false)
REDIRECT_STDOUT=true
REDIRECT_STDERR=true
OVERRIDE_PRINT=true

# =============================================================================
# ADVANCED SETTINGS (Usually don't need to change these)
# =============================================================================

# File Paths
DEFAULT_INPUT_DIR=input
DEFAULT_OUTPUT_DIR=output
DEFAULT_REFERENCE_CSV=input/driver - Sheet1.csv

# Output Format
JSON_INDENT=2
CSV_DELIMITER=,
